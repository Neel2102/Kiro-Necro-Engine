{
  "name": "necro-engine",
  "version": "0.1.0",
  "private": true,
  "description": "AI-driven modernization platform that revives outdated GitHub repositories",
  "workspaces": [
    "bonecore/common",
    "bonecore/hooks",
    "bonecore/integrations",
    "bonecore/planner",
    "bonecore/reporter",
    "bonecore/scanner",
    "bonecore/transformer",
    "apps/revive-cli",
    "apps/revive-web"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "npm run build --workspaces",
    "dev:cli": "npm run dev -w @necro/revive-cli",
    "dev:web": "npm run dev -w @necro/revive-web"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "lucide-react": "^0.556.0",
    "react-hot-toast": "^2.6.0",
    "react-hotkeys-hook": "^5.2.1"
  }
}
